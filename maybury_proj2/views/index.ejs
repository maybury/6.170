 <% include header.ejs %>
 <script type="text/javascript" src='/javascripts/LoginPage.js'></script>
</head>
 <body class="fritter-page">
  <h1><p>Welcome to Fritter.</p></h1>
 <h2><p>Written and designed by Maximilian Maybury</p></h2>
<div class="row">

<div class="col-md-4 col-md-offset-4 fritter-alert alert alert-danger" id="errorContainer" role="alert" style="display:none;">
	<span id="errorMessage"></span>
</div>
</div>
<div class="row">
	<div class="login-box col-md-4 col-md-offset-4">
	   <form id="existingUserBox" >

		  	<div class="input-wrap row"> <input class ="col-md-6 col-md-offset-3 input-field" id="username" placeholder='Username'/></div>
		  	<div class="input-wrap row"> <input type="password" class="col-md-6 col-md-offset-3 input-field" id="password" placeholder='Password'/></div>
		   	<button type='submit' class="btn fritter-button-lg">Sign in</button>
		  	<div class="link-wrap row">Not a member? <a onclick ="LoginPage.ShowCreateNewAccountBox()"/>Create an account.</a></div>
		  	
		</form>

		<form id="newUserBox" style="display:none">

		  	<div class="input-wrap row"> <input class ="col-md-6 col-md-offset-3 input-field" id="newUsername" placeholder='Username' /></div>
		  	<div class="input-wrap row"> <input type="password" class="col-md-6 col-md-offset-3 input-field" id="newPassword" placeholder='Password'/></div>
		  	<div class="input-wrap row"> <input type="password" class="col-md-6 col-md-offset-3 input-field" id="passwordConfirm" placeholder='Confirm Password' /></div>
		   	<button type='submit' class="btn fritter-button-lg">Create Account</button>
		   	<div class="link-wrap row">Existing User? <a onclick ="LoginPage.HideCreateNewAccountBox()"/>Login Here.</a></div>
		  	
		</form>
	</div>
</div>
 
<%include footer.ejs %>